<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amikom.myintentapp.MainActivity">

    <Button
        android:id="@+id/tombol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pindah Activity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tombol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pindah Activity Dengan data"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tombol1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tombol3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pindah Activity Dengan Objek"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tombol2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tombol4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial And Number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tombol3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tombol5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pindah Activity Untuk Result"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tombol4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil dari Activity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tombol5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout >
